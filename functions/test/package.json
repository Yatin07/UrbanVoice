{
  "name": "functions-test",
  "description": "Unit tests for CivicConnect Cloud Functions",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "firebase-functions-test": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../index.js"
    ],
    "coverageDirectory": "./coverage",
    "testMatch": [
      "**/*.test.js"
    ]
  }
}
